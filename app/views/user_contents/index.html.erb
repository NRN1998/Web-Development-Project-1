<div>
  <div>
    <h1>
      List of all user contents
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user content
    </h2>

    <form action="/insert_user_content" method="post">
      <div>
        <label for="photos_box">
          Photos
        </label>

        <input type="text" id="photos_box" name="query_photos">
      </div>

      <div>
        <label for="videos_box">
          Videos
        </label>

        <input type="text" id="videos_box" name="query_videos">
      </div>

      <div>
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption">
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id">
      </div>

      <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count">
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count">
      </div>

      <button>
        Create user content
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Photos
        </th>

        <th>
          Videos
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Likes count
        </th>

        <th>
          Comments count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_user_contents.each do |a_user_content| %>
      <tr>
        <td>
          <%= a_user_content.id %>
        </td>

        <td>
          <%= a_user_content.photos %>
        </td>

        <td>
          <%= a_user_content.videos %>
        </td>

        <td>
          <%= a_user_content.caption %>
        </td>

        <td>
          <%= a_user_content.owner_id %>
        </td>

        <td>
          <%= a_user_content.likes_count %>
        </td>

        <td>
          <%= a_user_content.comments_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_user_content.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user_content.updated_at) %> ago
        </td>

        <td>
          <a href="/user_contents/<%= a_user_content.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
