<h1>Sign up</h1>

<form action="/insert_user" method="post">

  <div>
    <label for="email_box">Email</label>
    <input id="email_box" name="query_email" placeholder="Choose a email..." type="text">
  </div>
                 
  <div>
    <label for="first_name_box">First name</label>
      
    <input type="text" id="first_name_box" name="query_first_name">
  </div>
         
  <div>
    <label for="last_name_box">Last name</label>
      
    <input type="text" id="last_name_box" name="query_last_name">
  </div>
         
  <div>
    <label for="username_box">Username</label>
      
    <input type="text" id="username_box" name="query_username">
  </div>
         
  <div>
    <label for="profile_image_box">Profile image</label>
      
    <input type="text" id="profile_image_box" name="query_profile_image">
  </div>
         
  <div>
    <label for="creator_box">Creator</label>
    <input id="creator_box" name="query_creator" type="checkbox">
  </div>
         
  <div>
    <label for="follow_requests_count_box">Follow requests count</label>
      
    <input type="text" id="follow_requests_count_box" name="query_follow_requests_count">
  </div>
         
  <div>
    <label for="user_contents_count_box">User contents count</label>
      
    <input type="text" id="user_contents_count_box" name="query_user_contents_count">
  </div>
         
  <div>
    <label for="subscriptions_count_box">Subscriptions count</label>
      
    <input type="text" id="subscriptions_count_box" name="query_subscriptions_count">
  </div>
         
  <div>
    <label for="subscribers_count_box">Subscribers count</label>
      
    <input type="text" id="subscribers_count_box" name="query_subscribers_count">
  </div>
         
  <div>
    <label for="given_donations_count_box">Given donations count</label>
      
    <input type="text" id="given_donations_count_box" name="query_given_donations_count">
  </div>
    
  <div>
    <label for="password_box">Password</label>
    <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
  </div>

  <div>
    <label for="password_confirmation_box">Password Confirmation</label>
    <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
  </div>

  <button>
    Sign up
  </button>
</form>

<hr>

<p>
  Or, <a href="/user_sign_in">Sign in</a> instead.
</p>
