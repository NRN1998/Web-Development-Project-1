<div >
  <h5>
    Edit User Account
  </h5>

  <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_user" method="post">
              
      <div>
        <label for="email_box">Email</label>
          
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
          
      </div>
                                    
      <div>
        <label for="first_name_box">First name</label>
          
        <input id="first_name_box" name="query_first_name" value="<%= @current_user.first_name %>">
          
      </div>
                      
      <div>
        <label for="last_name_box">Last name</label>
          
        <input id="last_name_box" name="query_last_name" value="<%= @current_user.last_name %>">
          
      </div>
                      
      <div>
        <label for="username_box">Username</label>
          
        <input id="username_box" name="query_username" value="<%= @current_user.username %>">
          
      </div>
                      
      <div>
        <label for="profile_image_box">Profile image</label>
          
        <input id="profile_image_box" name="query_profile_image" value="<%= @current_user.profile_image %>">
          
      </div>
                      
      <div>
        <label for="creator_box">Creator</label>
          
        <input id="creator_box" name="query_creator" type="checkbox" value="1" <%= "checked" if @current_user.creator %>>
          
      </div>
                      
      <div>
        <label for="follow_requests_count_box">Follow requests count</label>
          
        <input id="follow_requests_count_box" name="query_follow_requests_count" value="<%= @current_user.follow_requests_count %>">
          
      </div>
                      
      <div>
        <label for="user_contents_count_box">User contents count</label>
          
        <input id="user_contents_count_box" name="query_user_contents_count" value="<%= @current_user.user_contents_count %>">
          
      </div>
                      
      <div>
        <label for="subscriptions_count_box">Subscriptions count</label>
          
        <input id="subscriptions_count_box" name="query_subscriptions_count" value="<%= @current_user.subscriptions_count %>">
          
      </div>
                      
      <div>
        <label for="subscribers_count_box">Subscribers count</label>
          
        <input id="subscribers_count_box" name="query_subscribers_count" value="<%= @current_user.subscribers_count %>">
          
      </div>
                      
      <div>
        <label for="given_donations_count_box">Given donations count</label>
          
        <input id="given_donations_count_box" name="query_given_donations_count" value="<%= @current_user.given_donations_count %>">
          
      </div>
              
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a new password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your new password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
